    "version": "0.2.0",
    "configurations": [                
        {      
            "type": "node",
            "request": "attach",
            "name": "Debug Fuctions",
            "port": 9229
        },  
        {
            "name": "Mocha Tests firebase-shared",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/packages/firebase/firebase-shared/src/**/*.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node",
            "outputCapture": "std",
            "env": {
                "GOOGLE_APPLICATION_CREDENTIALS": "/Users/pete/vizsurvey/admin-credentials-dev.json",
                "FIRESTORE_EMULATOR_HOST": "127.0.0.1:8080",
                "FIRESTORE_PROJECT_ID": "vizsurvey-test",
                "FIRESTORE_DATABASE_URL": "https://vizsurvey-test.firebaseio.com/"
            } 
        },
        {
            "name": "Mocha Tests functions",
