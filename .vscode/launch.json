{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [                
        {
            "name": "Mocha Tests",
            "args": [
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/packages/firebase/firebase-shared/src/**/*.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Launch Chrome against localhost",
            "type": "pwa-chrome",
            "request": "launch",
            "url": "http://localhost:3000/dev",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "name": "Debug tests watch mode",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
            "args": ["test", "--runInBand", "--no-cache", "--watchAll -- --silent=false"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
       },
       {
            "name": "Jest Debug opened file",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
            "args": ["test", "${fileBasenameNoExtension}", "--runInBand", "--no-cache", "--watchAll -- --silent=false"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Jest single run all tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": ["--verbose", "-i", "--no-cache -- --silent=false"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Debug CLI monitor",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "/Users/pete/.nvm/versions/node/v19.3.0/bin/node",
            "program": "${workspaceFolder}/cli/src/index.js",
            "args": ["monitor", "450", "-l", "06/30/2023", "-t", "3"],
            "cwd": "${workspaceRoot}/cli",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}