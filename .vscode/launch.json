{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000/dev",
            "webRoot": "${workspaceFolder}/src"
        },
        {
            "name": "Debug tests watch mode",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
            "args": ["test", "--runInBand", "--no-cache", "--watchAll -- --silent=false"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
       },
       {
            "name": "Jest Debug opened file",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "${workspaceRoot}/node_modules/.bin/react-scripts",
            "args": ["test", "${fileBasenameNoExtension}", "--runInBand", "--no-cache", "--watchAll -- --silent=false"],
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Jest single run all tests",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": ["--verbose", "-i", "--no-cache -- --silent=false"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
    ]
}