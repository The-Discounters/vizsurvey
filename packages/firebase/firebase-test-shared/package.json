    "test:watch": "mocha './src/**/*.test.js' --watch --parallel --timeout 5s"
  },
  "dependencies": {
    "firebase": "^11.0.2",
    "firebase-admin": "^12.0.0",
    "luxon": "^3.4.4"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^4.0.1",
    "@firebase/testing": "^0.20.11",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "jest": "^29.7.0",
    "mocha": "^10.2.0"
  }
}
