{
  "name": "@the-discounters/firebase-test-shared",
  "description": "Firebase test library",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "build": "echo 'Build script currently does nothing in @the-discounters/firebase-shared module.'",
    "shell": "firebase functions:shell",
