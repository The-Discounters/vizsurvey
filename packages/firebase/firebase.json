{
  "firestore": {
    "rules": "firestore.rules",
    "emulators": {
      "functions": {
        "port": 5001
      },
      "firestore": {
        "port": "8080"
      }
    },
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "bash ./functions/deploy-cloud-functions.sh pre-deploy"
      ],
      "postdeploy": ["bash ./functions/deploy-cloud-functions.sh post-deploy"]
    }
  ]
}
