{
  "firestore": {
    "rules": "firestore.rules",
    "emulators": {
      "functions": {
        "port": 5001
      },
      "firestore": {
        "port": "8080"
      }
    },
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.test.js"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
    }
  ]
}
