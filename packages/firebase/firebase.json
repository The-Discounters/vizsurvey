{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint", "bash ./functions/deploy-cloud-functions.sh pre-deploy", "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "postdeploy": ["bash ./functions/deploy-cloud-functions.sh post-deploy"]
    }
  ]
}
